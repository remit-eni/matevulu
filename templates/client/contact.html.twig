{% extends 'base.html.twig' %}
{% form_theme clientForm 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.1/css/mdb.min.css">
{% endblock %}
{% block main %}

    <div class="container">
        <div class="row">
            <div class="col" id="form">
                <h2>Demande de contact </h2>

                {{ form_start(clientForm) }}

                <div class="row">
                    <div class="col-md-6">{{ form_row(clientForm.Nom) }}</div>
                    <div class="col-md-6">{{ form_row(clientForm.Prenom) }}</div>
                </div>

                <div class="row">
                    <div class="col-md-6">{{ form_row(clientForm.Mail) }}</div>
                    <div class="col-md-6">{{ form_row(clientForm.Telephone) }}</div>
                </div>

                <div class="row">
                    <div class="col-md-4">{{ form_row(clientForm.Rue) }}</div>
                    <div class="col-md-4">{{ form_row(clientForm.CodePostal) }}</div>
                    <div class="col-md-4">{{ form_row(clientForm.Ville) }}</div>
                </div>

                <div class="row">
                    <div class="col-md-12">{{ form_row(clientForm.demande) }}</div>
                </div>

                <button type="submit" class="btn btn-success">Envoyer</button>


                {{ form_end(clientForm) }}
            </div>

            <div class="col">
                <h2>Localisation</h2>
                {% include 'localisation.html.twig' %}
            </div>

        </div>
    </div>

{% endblock %}

{% block title %}{{ parent() }}| Contact {% endblock %}

